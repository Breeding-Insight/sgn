<%doc>

=head1 NAME
 
population/select_traits.mas - lists traits to select for GS analysis

=AUTHOR

Isaak Y Tecle (iyt2@cornell.edu)

=cut

</%doc>

<%args>


$traits_form
$pop_id
$all_traits_file
$no_traits_selected

</%args>

<%perl>

 open FH, "<", $all_traits_file or die "Can't open $all_traits_file: $!\n";
 my $headers = <FH>;
 my $trait_rows;

 while (<FH>)
{
 my ($id, $trait, $acronym) = split (/\t/);
 my $trait_link   = qq | <a href="/solgs/trait/$id/population/$pop_id" onclick="solGS.waitPage()">$trait</a> |;
 my $row          = <<ROW;
 <tr>
   <td>
     <input type  = "checkbox"
       name       = "trait_id"
       value      = $id > $trait_link
   </td>
 </tr>
ROW

    $trait_rows .=  $row;

}

my $message;
if ($no_traits_selected eq 'none')
{
   $message = qq | <p style="color:red">Please select one or more traits to analyze.</p> |;
}

</%perl>

<& /util/import_javascript.mas, classes => ["solGS.solGS"] &>

<link rel="stylesheet" href="/static/css/solgs/solgs.css" type="text/css" />

 <% $message %>

% if($trait_rows) {
 <form action="/solgs/analyze/traits/population/<%$pop_id %>" method="POST">
  <table>
   <% $trait_rows %>
     <tr>
       <td>
         <input class   = "button"
                type    = "submit"
                value   = "Build model"
                name    = "runGS"
                onclick = "solGS.waitPage()"
                > 
       </td> 
     </tr>
   </table> 
 </form> 
%} else {

<div id="traits_list_message"  style="font-weight:bold;text-align:center;text-transform:uppercase;color:#A7C942">
<p>There are no phenotyped traits for this population.</p>
</div>

%}
