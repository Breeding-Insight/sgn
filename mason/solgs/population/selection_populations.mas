<%doc>

displays list of prediction populations and their GS output.

</%doc>

<%args>

$result => ''
$download_prediction
$analyzed_traits
$pop_id
$project_name
$prediction_pop_id
$list_of_prediction_pops => ''
$prediction_pop_name => ''
$prediction_pop_analyzed_traits => ''

</%args>

<%perl>

my $title;

if ($c->req->path =~ /solgs\/traits\/all\/population/) {
    $title = 'Predict GEBVs of a selection population using the models';
  } else {
 $title = 'Predict GEBVs of a selection population using the model';
}

</%perl>


<& /util/import_javascript.mas, classes => ["solGS.solGS"] &>

<&| /page/info_section.mas, 
    collapsible => 1, 
    collapsed   => 0, 
    title       => $title,
&>

<div id="selection_populations">

% if ($list_of_prediction_pops->[0])
% {
<& /page/columnar_table.mas,
     headings    => ['',  'Selection population', 'Description', 'Generation', 'Year', 'Predict GEBVs' ],
     data        => $list_of_prediction_pops,
    __alt_freq   => 2,
    __alt_width  => 1,
    __align      => 'llllll'
&>
%} else
%{
  <div style="font-weight:bold;text-align:justify;color:#A7C942">
    <p>There are no relevant selection populations in the database. 
       If you have or want to make your own set of selection 
       candidates use the form below.</p>
  </div>
%}

<p>&nbsp</p>

<& user_selection_genotypes.mas &>

</div>

</&>
